<h1>Список статей</h1>
<%= link_to '☞ Создать статью.', new_article_path %>

  <% @articles.each do |article| %>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <%= article.text.first(300) %>
      <br><%= link_to 'Редактировать', edit_article_path(article) %>
      <%= link_to 'Удалить', article_path(article),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></br>
  <% end %>
